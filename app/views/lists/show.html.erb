<div class="banner">
   <h1><%= @list.name %></h2>
</div>

<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to "create bookmark",  new_list_bookmark_path(@list), class: "btn btn-flat"%>
    <%= link_to "Delete list", list_delete_path(@list), data: {turbo_method: :delete}%>
  </div>
  <div class="row">
     <% @list.bookmarks.each do |bookmark| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <div class="bg-white rounded shadow h-100">
          <%= image_tag(bookmark.movie.poster_url) %>
        </div>
        <div class="p-3 rounded-bottom d-flex flex-column">
          <strong><%= bookmark.movie.title %></strong>
          <small class="text-muted"><%= bookmark.movie.overview %></small>
        </div>
      </div>
     <% end %>
  </div>
</div>
