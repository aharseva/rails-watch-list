<div class="banner">
    <h1>Save any movie</h1>
    <p>Categorise your favourite movies</p>
  </div>
</div>

<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
     <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background.jpg') %>)">
          <div class="list-card">
          <h5 class="no-underline"> <%= link_to list.name, list_path(list) %></h5>
          </div>
        </div>
      </div>
     <% end %>
  </div>
</div>
